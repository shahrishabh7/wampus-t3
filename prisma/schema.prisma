// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Building {
    id        String @id @default(cuid())
    name      String
    address   String
    amenities String // DB doesn't support list of strings, we'll parse a long string for now

    createdAt DateTime @default(now())
}

model Lease {
    id                  String   @id @default(cuid())
    name                String
    bedroom_count       Int
    bathroom_count      Int
    sqft                Int
    rent                Int
    building_id         String   @map("building_id")
    building_name       String
    signing_date        DateTime @default(now())
    average_walk_time   Int
    satisfaction_rating Float

    create_date DateTime @default(now())

    @@index([building_id])
}
